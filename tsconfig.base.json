{
  "compilerOptions": {
    "target": "ES2020"
  , "module": "CommonJS"
  , "moduleResolution": "NodeNext"
  , "strict": true
  , "skipLibCheck": true
  , "esModuleInterop": true
  , "newLine": "lf"
  , "baseUrl": "."
  , "paths": {
      "@src/*": ["src/*"]
    , "@utils/*": ["src/utils/*"]
    , "@test/*": ["__tests__/*"]
    }
  }
}
