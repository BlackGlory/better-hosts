    "@blackglory/errors": "^2.2.1",
    "@blackglory/go": "^1.0.0",
    "@blackglory/types": "^1.0.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^9.1.0",
    "extra-logger": "^0.6.5",
    "extra-promise": "^1.0.1",
    "hostile": "^1.3.3",
    "ms": "^2.1.3",
    "native-node-dns": "^0.7.6",
    "return-style": "^1.0.0"
  }
