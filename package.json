    "@types/ms": "^0.7.31",
    "@types/node": "14",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "husky": "4",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.3",
    "tsconfig-paths": "^3.14.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.6.2"
  },
